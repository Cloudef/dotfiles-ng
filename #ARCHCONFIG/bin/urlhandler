#!/bin/sh
# Common url handler
# termite uses this, dwb it's binded to ctrl+y

# $@ = Get domain from url
domain() {
   echo "$@" | sed -e "s/[^/]*\/\/\([^@]*@\)\?\([^:/]*\).*/\2/"
}

# $@ = URL
main() {
   case "$(domain "$@")" in
      *youtube.com)
         mpv -really-quiet -loop inf "$@" &> /dev/null
      ;;
      *nicovideo.jp)
         nicoplay "$@" &> /dev/null
      ;;
      *)
         "$BROWSER" "$@" &> /dev/null &
      ;;
   esac
}
main "$@"
