#!/bin/bash
# Common url handler
# termite uses this, dwb it's binded to ctrl+y

# $@ = Get domain from url
domain() {
   echo "$@" | sed -e "s/[^/]*\/\/\([^@]*@\)\?\([^:/]*\).*/\2/"
}

# $@ = URL
main() {
   case "$(domain "$@")" in
      *nicovideo.jp)
         nicoplay "$@" &> /dev/null
      ;;
      *)
         {
            read -r title
            read -r url
         } < <(youtube-dl --default-search "plznosearch:" -eg "$@")

         if [[ -n "$url" ]]; then
            mpv --really-quiet --loop=inf --title="$title" "$url" &
         else
            "$BROWSER" "$@" &> /dev/null &
         fi
      ;;
   esac
}
main "$@"
